<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="TargetUrlMapper">
	
	<!--表名 -->
	<sql id="tableName">
		SPSM_TARGETURL
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		TARGETURL,	
		STATUS,	
		SEEDURLID,	
		CREATETIME,
		UPDATETIME,
		TARGETURL_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{TARGETURL},	
		#{STATUS},	
		#{SEEDURLID},
		#{CREATETIME},
		#{UPDATETIME},	
		#{TARGETURL_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	
	<!-- 批量插入 -->
		<insert id="saveAll" parameterType="pd">
		insert into 
		<include refid="tableName"></include>
		(
			<include refid="Field"></include>
		) values
			<foreach collection="targetUrlList" item="item" separator="," index="index">
			(
				#{item.TARGETURL},	
				#{item.STATUS},	
				#{item.SEEDURLID},	
				#{item.CREATETIME},
				#{item.UPDATETIME},
				#{item.TARGETURL_ID}
			
			)
			</foreach>
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			TARGETURL_ID = #{TARGETURL_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			TARGETURL = #{TARGETURL},
			STATUS = #{STATUS},
			SEEDURLID = #{SEEDURLID},
			CREATETIME=#{CREATETIME},
			UPDATETIME=#{UPDATETIME},
		TARGETURL_ID = TARGETURL_ID
		where 
		TARGETURL_ID = #{TARGETURL_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			TARGETURL_ID = #{TARGETURL_ID}
	</select>
	
	<select id="findByUrl" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			TARGETURL = #{TARGETURL}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件
					字段1 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or 
					字段2 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
				-->
				)
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
	</select>
	
	
	<!-- 通过targetUrl 和status查询 -->
	
	<select id="listBySeedUrlIdAndStatus" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
		
		<if test="SEEDURLID!=null and SEEDURLID!=''">
			and SEEDURLID =#{SEEDURLID}
		</if>
		<if test="STATUS!=null and STATUS!=''">
			and STATUS =#{STATUS}
		</if>
		
	</select>
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			TARGETURL_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- fh313596790qq(青苔) -->
</mapper>