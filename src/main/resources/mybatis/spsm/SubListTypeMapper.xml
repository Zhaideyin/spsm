<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="SubListTypeMapper">
	
	<!--表名 -->
	<sql id="tableName">
		SPSM_SUBLISTTYPE
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		SUBLISTTYPENAME,	
		LISTID,	
		SUBLISTTYPE_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{SUBLISTTYPENAME},	
		#{LISTID},	
		#{SUBLISTTYPE_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			SUBLISTTYPE_ID = #{SUBLISTTYPE_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			SUBLISTTYPENAME = #{SUBLISTTYPENAME},
			LISTID = #{LISTID},
		SUBLISTTYPE_ID = SUBLISTTYPE_ID
		where 
		SUBLISTTYPE_ID = #{SUBLISTTYPE_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			SUBLISTTYPE_ID = #{SUBLISTTYPE_ID}
	</select>

<!--通过name 查询 -->
	<select id="findByName" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from
		<include refid="tableName"></include>
		where
		SUBLISTTYPENAME = #{datatypeName}
	</select>
	<!-- 通过上一级来查询下一级 的列表 -->
	<select id="listFindByListID" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from
		<include refid="tableName"></include>
		where
		LISTID=#{LISTTYPE_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		*
		from 
		SPSM_SUBLISTTYPE s
		left join SPSM_LISTTYPE l on s.LISTID=l.LISTTYPE_ID
		where 1=1
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件-->
					s.SUBLISTTYPENAME LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or 
					l.LISTTYPENAME LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
				)
		</if>
		order by s.LISTID asc
	</select>
	
	<!-- 列表(全部) -->
	<!-- <select id="listAll" parameterType="pd" resultType="pd">
		SELECT a.LISTTYPE_ID ,b.* 
		  FROM spsm_listtype a 
		LEFT JOIN 
			spsm_sublisttype b 
		ON
			b.LISTID=a.LISTTYPE_ID
		WHERE 
		a.LISTTYPENAME='省外品种'
	</select> -->
	
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			SUBLISTTYPE_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- fh313596790qq(青苔) -->
</mapper>